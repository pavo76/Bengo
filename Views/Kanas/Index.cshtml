@{
    ViewBag.Title = "Index";
}

<div class="row">
    @using (Html.BeginForm("Learn", "Kanas"))
    {
        <label>Item number:</label>
        <input type="number" name="LearnItemNumber" min="1" max="30" value="5" />
        <select name="LearnFor">
            <option value="Default">Default learn</option>
            <option value="Goal">Learn for goal</option>
        </select>
        <input type="submit" class="btn btn-primary" style="margin: 5px;" value="Start Learning" />
    }

</div>

<div class="row">
    @{ if (ViewBag.DuePracticeCount == 0)
        {<p>No kana due for practice</p>}
        else
        {
            <span>Kana due for practicing: @ViewBag.DuePracticeCount</span>
            @Html.ActionLink("Practice", "Practice", "Kanas", new { area = "" }, new { @class = "btn btn-primary", @style = "margin: 5px;" })
            }
        }
        </div>
