@model IEnumerable<Bengo.Models.Kanji>

@{
    ViewBag.Title = "Kanji";
}

<h2>Kanji</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Kanji")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KanjiUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Meaning)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OnReading)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KunReading)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SRC)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KanjiUnit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Meaning)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OnReading)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KunReading)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SRC)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit",new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
