@model IEnumerable<Bengo.Models.Vocabulary>

@{
    ViewBag.Title = "Vocabulary";
}

<h2>Vocabulary</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Vocabulary")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
