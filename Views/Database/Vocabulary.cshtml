@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VocabularyUnit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kana)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Romaji)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Meaning)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.POS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KanjiList)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KanaList)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Vocabulary", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", "Vocabulary", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", "Vocabulary", new { id = item.ID })
        </td>
    </tr>
}

</table>
