            @Html.DisplayNameFor(model => model.VocabularyUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kana)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Romaji)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Meaning)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.POS)
        </th>
